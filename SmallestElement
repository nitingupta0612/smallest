#include<iostream>
#include<conio.h>
#include<math.h>
using namespace std;
int main()
{
	int arr[20],n,i,maximum,minimum;
	cout<<"Enter the size of the array  : ";
	cin>>n;
	cout<<"Enter all the elements of the array : \n";
	for(i=0;i<n;i++)
	cin>>arr[i];
	maximum=arr[0];
	for(i=0;i<n;i++)
	{
		if(maximum<arr[i])
		maximum=arr[i];
	}
	minimum=arr[0];
	for(i=0;i<n;i++)
	{
		if(minimum>arr[i])
		minimum=arr[i];
	}
	cout<<"Largest element of the array = "<<maximum<<endl;
	cout<<"Smallest element of the array = "<<minimum<<endl;
	return 0;
}
